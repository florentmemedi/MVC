@model MovieModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>
@using (@Html.BeginForm("Add", "Home", FormMethod.Post))

{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Id, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Id, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Id, "", new { @class = "label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Genre, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Information, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Information, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Information)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Price, new { @class = "form-label" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <input value="Save" type="submit" />
}
