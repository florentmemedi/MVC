@model PurchaseModel
@{
    ViewData["Title"] = "PurchaseDetails";
}

<h2>PurchaseDetails</h2>

<div class="form-control" style="height: 300px">
    <div class="form-control-static">Purchase ID: @Html.Label(Model.Id.ToString())</div>
    <div class="form-control-static">Purchase Name: @Html.Label(Model.PurchaseName)</div>
    <div class="form-control-static">Movie: @Html.Label(Model.Movie)</div>
    <div class="form-control-static">Quantity: @Html.Label(Model.Quantity.ToString())</div>
    <div class="form-control-static">Price: @Html.Label(Model.Price.ToString())</div>
    <div class="form-control-static">User: @Html.Label(Model.User ?? string.Empty)</div>
</div>